  timestamp = {2019-08-29T01:56:31.000+0200},
  title = {American {{Liberalism}} and the {{Problem}} of {{Propaganda}}: {{Scholars}}, {{Lawyers}}, and the {{War}} on {{Words}}, 1919-1945},
