  timestamp = {2019-08-29T01:56:31.000+0200},
  title = {Heavy {{Genealogy}}: {{Mapping}} the {{Currents}}, {{Contraflows}} and {{Conflicts}} of the {{Emergent Field}} of {{Metal Studies}}, 1978-2010},
