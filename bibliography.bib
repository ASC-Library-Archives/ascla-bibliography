  intrahash = {1281739cb7cb71005622851830d5e4e3},
  keywords = {basr cold-war columbia dissertation externalist historiography institutional intellectual internalist lazarsfeld mass-society memory orr shils small-groups sociology united-states},
  school = {Columbia University},
