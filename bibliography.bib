  intrahash = {e161c86b76fb960e8d23d8f77d4484f4},
  keywords = {dissertation general intellectual internalist mass-communication methodology philosophy sociology-of-science uses-and-gratifications},
  school = {Stanford University},
  timestamp = {2019-08-29T01:56:31.000+0200},
