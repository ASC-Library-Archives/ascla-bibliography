  keywords = {broadcasting-education lazarsfeld media-education media-reform sociology},
  school = {Bangor University},
  timestamp = {2021-07-03T20:50:36.000+0200},
  title = {Paul Lazarsfeld and the Trajectory of the American Media Reform Movement, 1922-1955},
