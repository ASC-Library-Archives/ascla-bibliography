  author = {Wheatland, Thomas P.},
  interhash = {2d396fb2ae13e14a6af5e0a222cc4c8a},
  intrahash = {13c2b46a71c32aab8b3d64ce832f878b},
  keywords = {columbia critical dissertation externalist frankfurt-school germany horkheimer institutional intellectual marcuse new-left united-states},
  school = {Boston College},
  timestamp = {2019-08-29T01:56:31.000+0200},
  title = {Isolation, {{Assimilation}}, and {{Opposition}}: {{A Reception History}} of the {{Horkheimer Circle}} in the {{United States}}, 1934-1979},
