  intrahash = {8a6f69439e4ab9c1b0482268952dcb46},
  keywords = {cultural-studies cultural-theory history intellectual internalist marxism new-left postwar united-kingdom western-marxism},
  publisher = {{Duke University Press}},
  timestamp = {2019-08-29T01:56:31.000+0200},
